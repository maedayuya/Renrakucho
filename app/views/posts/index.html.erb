<h1>投稿一覧</h1>
<table class="table table-hover table-inverse">
<thead>
	<th>投稿者</th>
	<th>タイトル</th>
	<th>内容</th>
</thead>
<tbody>
　<% @posts.each do |post| %>
  <tr>
	<td><%= post.admin.name %>先生</td>
	<td><%= post.title %></td>
	<td><%= post.body.truncate(20) %></td>
	<td><%= link_to "詳細",post_path(post.id) %></td>
  <% end %>
  </tr>
</tbody>
</table>


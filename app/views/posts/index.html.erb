<h1>お知らせ一覧</h1>
<table class="table table-hover table-inverse">
<thead>
	<th>投稿日</th>
	<th>投稿者</th>
	<th>タイトル</th>
	<th>内容</th>
</thead>
<tbody>
　<% @posts.each do |post| %>
  <tr>
	<td><%= post.created_at.strftime("%Y年%m月%d日") %></td>
	<td><%= post.admin.name %>先生</td>
	<td><%= post.title %></td>
	<td><%= post.body.truncate(20) %></td>
	<td><%= link_to "詳細",post_path(post.id),class: "btn btn-default" %></td>
  <% end %>
  </tr>
</tbody>
</table>

